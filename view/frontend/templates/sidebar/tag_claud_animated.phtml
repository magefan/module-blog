        try {
            TagCanvas.Start('blogSidebarCloudCanvas', null, " . /*@noEscape*/ $block->getAnimationConfig() . ");
        } catch (e) {
            /* something went wrong, hide the canvas container */
            document.getElementById('blogSidebarCloudCanvasContainer').style.display = 'none';
        }
    });
"; ?>
