/**
 * Post tag autocomplete template
 *
 * @var $block \Magefan\Blog\Block\Adminhtml\Post\Tag\Autocomplete
 * @var $mfSecureRenderer \Magefan\Community\Api\SecureHtmlRendererInterface
 */
