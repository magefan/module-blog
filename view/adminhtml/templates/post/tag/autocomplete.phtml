<?php $script = ''; ?>

<?php $script .= "
    require(['jquery', 'domReady!'], function ($) {
        require(['Magefan_Blog/js/jquery.tagsinput'], function(){

            function split(val) {
                return val.split(/,\s*/);
            }
            function extractLast(term) {
                return split(term).pop();
            }

            function escapeHtml(unsafe)
            {
                return unsafe
                    .replace(/&/g, \"&amp;\")
                    .replace(/</g, \"&lt;\")
                    .replace(/>/g, \"&gt;\")
                    .replace(/\"/g, \"&quot;\")
                    .replace(/'/g, \"&#039;\");
            }

            var intr = setInterval(function() {
                var $el = $('[name*=\"tag_input\"]');
                if (!$el.length) {
                    return;
                }
                clearInterval(intr);

                var oAddTag = $.fn.addTag;
                $.fn.addTag = function() {
                    setTimeout(function(){
                        $el.change();
                    }, 500);

                    return oAddTag.apply(this, arguments);
                };

                var oRemoveTag = $.fn.removeTag;
                $.fn.removeTag = function() {
                    setTimeout(function(){
                        $el.change();
                    }, 500);

                    return oRemoveTag.apply(this, arguments);
                };

                $el.each(function () {

                    var $e = $(this);
                    var $tags = $e.tagsInput({
                        'height':'200px',
                        'width':'768px',
                        'interactive':true,
                        'defaultText':'Add tag',
                        'removeWithBackspace' : true,
                        'minChars' : 2,
                        'maxChars' : 0,
                    });

                    var linkedTags = " . /*@noEscape*/ $block->getLinkedTags() . ";

                    for (var i=0; i<linkedTags.length;i++) {
                        if (!$tags.tagExist(linkedTags[i])) {
                            $tags.addTag(linkedTags[i]);
                        }
                    }

                    $('#' + $tags.attr('id') + '_tag').autocomplete({
                        source: function (request, response) {
                                var searchTag = extractLast(request.term);
                                $.ajax({
                                url: '" . $block->escapeUrl($block->getAutocompleteUrl()) . "',
                                type: 'post',
                                dataType: 'json',
                                data: {
        search: searchTag,
                                },
                                success: function (data) {
        response(data);
    }
                            });
                        },
                        'select': function( event, ui ) {
    var tag = ui.item.label;
    $tags.removeTag(tag);
    $tags.addTag(tag);
    return false;
}
                    });

                    try {
                        $('#' + $tags.attr('id') + '_tag').data( 'ui-autocomplete' )._renderItem = function( ul, item ) {
                            return $( '<li></li>' ).data('item.autocomplete', item)
                                .append( '<a>' + escapeHtml(item.label) + '</a>')
                                .appendTo( ul );
                        };
                    } catch (e) {
                        console.log('Autocomplete error: ' + e);
                    }
                });
            }, 1000);
        })
    });
"; ?>

<?= /* @noEscape */ $mfSecureRenderer->renderTag('script', ['type' => 'text/x-magento-init'], $script, false) ?>
